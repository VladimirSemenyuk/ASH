- var modelText = model.name;
- if (submodel) {modelText = modelText + ' (' + submodel + ')'}

style.
    html {
        min-width: 100%;
        min-height: 100%;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
    }

    body {
        min-width: 100%;
        min-height: 100%;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        font-family: 'Open Sans', sans-serif;
        font-size: 16px;
        line-height: 25px;
    }

    #page {
        position: relative;
        margin: 0 auto;
        padding: 0;
        width: 800px;
        max-width: 800px;
        min-width: 800px;
        min-height: 100%;
        height: 100%;
    }

    .tree-main {
        margin: 130px auto 30px;
        display: block;
        width: 150px;
        height: 141px;
    }

    .logo-text {
        text-align: center;
        width: 225px;
        display: block;
        margin: 0 auto 80px;
    }

    .model__specs {
        margin: 25px auto;
    }

    .spec__name {
        width: 50%;
        padding-right: 10px;
        font-weight: bold;
        text-align: right;
        vertical-align: top;
    }

    .spec__value {
        width: 50%;
        padding-left: 10px;
    }

    .spec_switching .spec__value__list {
        list-style: decimal;
        padding-left: 20px;
    }

    ol, ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }


.model-page
    img.tree-main(src='./tree.png')

    img.logo-text(src='./ash_instruments.png')

    include ./specList.jade


