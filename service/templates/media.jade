mixin media(selector, src, srcRetina, id)
    - src = '/img/' + id + '/' + src;
    - srcRetina = '/img/' + id + '/' + srcRetina;
    - var list = src.replace('preview', 'list');
    - var preview = src.replace('list', 'preview');
    - var listRetina = srcRetina.replace('preview', 'list');
    - var previewRetina = srcRetina.replace('list', 'preview');
    
    style.
        !{selector} {
            background-image: url(!{src});
        }
        
        @media only screen and (min-device-height: 451px) and (max-device-height: 765px) and (orientation: portrait) {
            !{selector} {
                    background-image: url(!{list});
                    background-size: contain;
                }
            }
            
