- var modelText = model.name;
- if (submodel) {modelText = modelText + ' (' + submodel + ')'}

style.
    html {
        min-width: 100%;
        min-height: 100%;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
    }

    body {
        min-width: 100%;
        min-height: 100%;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        font-family: 'Open Sans', sans-serif;
        font-size: 13px;
        line-height: 23px;
    }

    #page {
        position: relative;
        margin: 0 auto;
        padding: 0;
        width: 1200px;
        max-width: 1200px;
        min-width: 1200px;
        min-height: 100%;
        height: 100%;
    }

    .tree-main {
        margin: 100px auto 20px;
        display: block;
        width: 150px;
        height: 141px;
    }

    .logo-text {
        text-align: center;
        width: 225px;
        display: block;
        margin: 0 auto 70px;
    }

    .model__specs {
        margin: 25px auto;
    }

    .spec__name {
        width: 50%;
        padding-right: 10px;
        font-weight: bold;
        text-align: right;
        color: #555;
        vertical-align: top;
    }

    .spec__value {
        width: 50%;
        padding-left: 10px;
    }

    .spec_switching .spec__value__list {
        list-style: decimal;
        padding-left: 20px;
    }

    ol, ol {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .qr {
        margin: 55px auto;
        display: block;
        width: 200px;
        height: 200px;
    }

    .appeal {
        width: 700px;
        margin: 0 auto;
    }

    p {
        font-style: italic;
        padding: 0 0 0 40px;
        margin: 8px 0;
    }

    .sign {
        margin-left: 400px;
    }

    .link {
        position: absolute;
        top: 1510px;
        left: 400px;
        text-align: center;
        width: 400px;
        color: #777777;
    }


.model-page
    img.tree-main(src='./tree-large.png' style="width=150px; height: 141px;")

    img.logo-text(src='./ash_instruments.png')

    include ./specList.jade

    img.qr(src="./" + id + '.png')

    .appeal
        p Dear customer,
        p Thank you for purchasing musical instrument made by Ash Instruments. We are very glad to see you in the growing club of Ash guitars and basses owners.
        p Your new instrument is a product of craftmanship made from best wood and parts. We hope you will enjoy your time with it as well as it's sound and playability.
        p.sign Kind regards,
        p.sign &nbsp;
        p.sign &nbsp;
        p.sign Andrey Shevchenko
        p.sign luthier


    .link www.ash-instruments.com


